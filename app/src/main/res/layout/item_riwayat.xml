<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@drawable/sh_rounded_blue_border"
    android:layout_margin="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_microseizure_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Microseizure Terakhir:"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:id="@+id/microseizureTextView"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/sh_rounded_grey_border"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:id="@+id/tv_seizure_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seizure Terakhir:"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:id="@+id/seizureTextView"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/sh_rounded_grey_border"
            android:fontFamily="@font/poppinsregular"/>
    </LinearLayout>
</LinearLayout>
