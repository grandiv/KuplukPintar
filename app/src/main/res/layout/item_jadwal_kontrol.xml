<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="16dp"
    android:gravity="center"
    android:background="@drawable/sh_rounded_blue_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_tanggal_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tanggal:"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:id="@+id/tv_tanggal"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/sh_rounded_grey_border"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:id="@+id/tv_tempat_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempat:"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:id="@+id/tv_tempat"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/sh_rounded_grey_border"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:id="@+id/tv_dokter_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dokter:"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:id="@+id/tv_dokter"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/sh_rounded_grey_border"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:id="@+id/tv_pesan_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesan:"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:id="@+id/tv_pesan"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/sh_rounded_grey_border"
            android:fontFamily="@font/poppinsregular"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp">

        <Button
            android:id="@+id/btn_edit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"
            android:background="@drawable/ic_edit"/>

        <Button
            android:id="@+id/btn_checklist"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/sh_checkcircle"/>
    </RelativeLayout>
</LinearLayout>